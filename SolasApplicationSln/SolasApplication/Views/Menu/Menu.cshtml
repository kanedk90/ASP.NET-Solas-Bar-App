@model IEnumerable<DataAccessLayer.MenuList>

@{
    ViewBag.Title = "Menu";
}

<h2>Menu</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cocktail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Beer)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Liquor)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cocktail)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Beer)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Liquor)
        </td>
     
    </tr>
}

</table>
