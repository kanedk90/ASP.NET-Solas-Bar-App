@model IEnumerable<DataAccessLayer.SolasReview>

@{
    ViewBag.Title = "Reviews";
}

<h2>Reviews</h2>

<p>We are very interested in getting your feedback, so let us know how your visit to Solas was</p>


@foreach (var item in Model)
{
    <div>
        <div><b>Rating: </b> @item.Rating out of 10</div>
        <div><b>Name: </b> @item.Name </div>
        <div> @item.Body</div>
    </div>
    <hr />

}


